{
  "manifest_version": 2,
  "name": "Webstats",
  "version": "1.2.2",
  "content_scripts": [{
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
  }],
  "permissions": [
    "cookies",
    "tabs",
    "webRequest",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "16": "record.png"
    },
    "default_popup": "popup.html"
  },
  "devtools_page": "ws-devtools.html"
}